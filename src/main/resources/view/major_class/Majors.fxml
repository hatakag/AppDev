<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane prefHeight="680.0" prefWidth="1070.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.javafx.controllerfx.major_class.MajorsController">
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <top>
            <BorderPane prefHeight="40.0" prefWidth="0.0" BorderPane.alignment="CENTER">
               <center>
                  <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label alignment="CENTER" text="Filter by:" textFill="#333333" wrapText="true">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Label>
                        <JFXRadioButton fx:id="idFilter" selected="true" text="ID">
                           <toggleGroup>
                              <ToggleGroup fx:id="filter" />
                           </toggleGroup>
                        </JFXRadioButton>
                        <JFXRadioButton fx:id="nameFilter" text="Name" toggleGroup="$filter" />
                        <TextField fx:id="txtSearchField" onAction="#handleSearchAction" prefWidth="350.0" promptText="Search by ID" text="Remove this">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <JFXButton fx:id="searchButton" alignment="CENTER" onAction="#handleSearchAction" prefWidth="110.0" stylesheets="@../../app.css" text="Search" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <graphic>
                              <FontAwesomeIconView fill="WHITE" glyphName="SEARCH" size="18" wrappingWidth="22.5" />
                           </graphic>
                           <padding>
                              <Insets bottom="7.0" left="10.0" right="10.0" top="7.0" />
                           </padding>
                        </JFXButton>
                     </children>
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="50.0" right="5.0" top="5.0" />
                     </BorderPane.margin>
                  </HBox>
               </center>
               <BorderPane.margin>
                  <Insets bottom="10.0" top="10.0" />
               </BorderPane.margin>
               <top>
                  <VBox BorderPane.alignment="CENTER">
                     <children>
                        <Text fill="#0096c9" strokeType="OUTSIDE" strokeWidth="0.0" text="MAJOR" textAlignment="CENTER">
                           <font>
                              <Font size="20.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" left="50.0" right="5.0" top="5.0" />
                           </VBox.margin>
                        </Text>
                        <Separator VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </top>
            </BorderPane>
         </top>
         <left>
            <TableView fx:id="tblMajor" prefHeight="560.0" prefWidth="360.0" BorderPane.alignment="CENTER">
               <columns>
                  <TableColumn fx:id="colMajorCode" editable="false" minWidth="-1.0" prefWidth="-1.0" text="Major Code" />
                  <TableColumn fx:id="colMajorTitle" editable="false" minWidth="-1.0" prefWidth="-1.0" text="Major Title" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <BorderPane.margin>
                  <Insets left="10.0" />
               </BorderPane.margin>
            </TableView>
         </left>
         <right>
            <HBox prefHeight="560.0" prefWidth="500.0" BorderPane.alignment="CENTER">
               <children>
                  <TableView fx:id="tblMajorCourseList" prefWidth="250.0">
                     <columns>
                        <TableColumn prefWidth="249.0" text="Major Course">
                           <columns>
                              <TableColumn fx:id="colMajorCC" minWidth="0.0" prefWidth="110.0" text="Course Code" />
                              <TableColumn fx:id="colMajorCN" minWidth="0.0" prefWidth="139.0" text="Course Name" />
                           </columns>
                        </TableColumn>
                     </columns>
                  </TableView>
                  <TableView fx:id="tblMinorCourseList" prefWidth="250.0">
                     <columns>
                        <TableColumn prefWidth="249.0" text="Minor Course">
                           <columns>
                              <TableColumn fx:id="colMinorCC" minWidth="0.0" prefWidth="110.0" text="Course Code" />
                              <TableColumn fx:id="colMinorCN" minWidth="0.0" prefWidth="139.0" text="Course Name" />
                           </columns>
                        </TableColumn>
                     </columns>
                  </TableView>
               </children>
               <BorderPane.margin>
                  <Insets right="10.0" />
               </BorderPane.margin>
            </HBox>
         </right>
         <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="60.0" BorderPane.alignment="CENTER">
               <children>
                  <JFXButton fx:id="btnViewCourseList" alignment="BASELINE_LEFT" onAction="#handleViewCourseList" prefHeight="35.0" prefWidth="165.0" style="-fx-background-color: #3f63ff;" text="View Course List" textFill="WHITE">
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="ARROW_RIGHT" size="18" wrappingWidth="22.5" />
                     </graphic>
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </JFXButton>
                  <JFXButton fx:id="btnModifyList" alignment="BASELINE_LEFT" onAction="#modifyCourseList" prefHeight="35.0" prefWidth="165.0" style="-fx-background-color: #2979FF;" text="Modify Course List" textFill="WHITE">
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="PLUS" size="18" wrappingWidth="22.5" />
                     </graphic>
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </JFXButton>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </center>
   <bottom>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <HBox alignment="CENTER" prefHeight="60.0" prefWidth="223.0" spacing="60.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <JFXButton fx:id="btnRefresh1" alignment="CENTER" layoutX="649.0" layoutY="20.0" onAction="#refreshTable" prefWidth="120.0" style="-fx-background-color: #00C853;" text="Refresh" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="REFRESH" size="18" wrappingWidth="22.5" />
                     </graphic>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </JFXButton>
               </children>
            </HBox>
         </center>
         <right>
            <HBox alignment="CENTER" prefHeight="60.0" prefWidth="500.0" spacing="60.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </right>
         <left>
            <HBox alignment="CENTER" prefHeight="60.0" prefWidth="360.0" spacing="60.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <JFXButton fx:id="btnAdd" alignment="CENTER" onAction="#addMajor" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #2979FF;" text="Add" textFill="WHITE">
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="PLUS" size="18" wrappingWidth="22.5" />
                     </graphic>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </JFXButton>
                  <JFXButton fx:id="btnRemove" alignment="CENTER" layoutX="491.0" layoutY="20.0" onAction="#removeMajor" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #f44336;" stylesheets="@../../app.css" text="Remove" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="REMOVE" size="18" wrappingWidth="22.5" />
                     </graphic>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </JFXButton>
               </children>
            </HBox>
         </left>
      </BorderPane>
   </bottom>
</BorderPane>

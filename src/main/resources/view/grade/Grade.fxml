<StackPane prefHeight="680.0" prefWidth="1070.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.javafx.controllerfx.grade.GradeController">
   <children>
      <VBox>
         <children>
            <HBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <JFXToolbar prefHeight="40.0">
                           <center>
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="897.0" spacing="20.0" BorderPane.alignment="CENTER">
                                 <children>
                                    <Label alignment="CENTER" text="Check Grade" textFill="#333333" wrapText="true" HBox.hgrow="ALWAYS">
                                       <font>
                                          <Font size="13.0" />
                                       </font>
                                    </Label>
                                    <JFXTextField fx:id="studentIdField" alignment="CENTER" prefHeight="25.0" prefWidth="150.0" promptText="Student ID" styleClass="jfx-text-field" unFocusColor="WHITE">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                       <HBox.margin>
                                          <Insets left="10.0" right="10.0" />
                                       </HBox.margin>
                                    </JFXTextField>
                                    <JFXTextField fx:id="courseIdField" alignment="CENTER" layoutX="262.0" layoutY="15.0" prefHeight="25.0" prefWidth="150.0" promptText="Course ID" styleClass="jfx-text-field" unFocusColor="WHITE">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </JFXTextField>
                                    <JFXButton fx:id="filterButton" alignment="CENTER" onAction="#handleFilter" prefWidth="110.0" stylesheets="@../../app.css" text="Filter" textFill="WHITE">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                       <graphic>
                                          <FontAwesomeIconView fill="WHITE" glyphName="FILTER" size="18" text="" wrappingWidth="22.5" />
                                       </graphic>
                                       <padding>
                                          <Insets bottom="7.0" left="20.0" right="20.0" top="7.0" />
                                       </padding>
                                    </JFXButton>
                                 </children>
                              </HBox>
                           </center>
                           <left>
                              <HBox alignment="CENTER" prefWidth="130.0" BorderPane.alignment="CENTER">
                                 <children>
                                    <Text fill="#0096c9" strokeType="OUTSIDE" strokeWidth="0.0" text="Grade" textAlignment="CENTER" wrappingWidth="87.5390625">
                                       <font>
                                          <Font size="20.0" />
                                       </font>
                                    </Text>
                                 </children>
                              </HBox>
                           </left>
                        </JFXToolbar>
                        <Separator prefHeight="17.0" prefWidth="25.0" />
                        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                           <children>
                              <TableView fx:id="registerTableView" editable="true" prefHeight="563.0" prefWidth="884.0" HBox.hgrow="SOMETIMES">
                                 <columns>
                                    <TableColumn fx:id="studentID" prefWidth="120.0" text="Student ID" />
                                    <TableColumn fx:id="courseCode" minWidth="0.0" prefWidth="125.0" text="Course Code" />
                                    <TableColumn prefWidth="222.0" text="Course Name" />
                                    <TableColumn fx:id="midtermScore" editable="false" prefWidth="128.0" text="Midterm" />
                                    <TableColumn fx:id="finalScore" editable="false" prefWidth="426.0" text="Final" />
                                    <TableColumn fx:id="totalScore" editable="false" prefWidth="426.0" text="Total Score" />
                                 </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
                     <children>
                        <AnchorPane VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="60.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <JFXButton fx:id="btnMark" alignment="CENTER" onAction="#addMark" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #2979FF;" text="Mark" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="PLUS" size="18" text="" wrappingWidth="22.5" />
                     </graphic>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </JFXButton>
                  <JFXButton fx:id="btnRemove" alignment="CENTER" layoutX="491.0" layoutY="20.0" onAction="#removeMark" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #f44336;" text="Remove" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="REMOVE" size="18" wrappingWidth="22.5" />
                     </graphic>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </JFXButton>
                  <JFXButton fx:id="btnUpdate" alignment="CENTER" layoutX="570.0" layoutY="20.0" onAction="#updateMark" prefWidth="120.0" style="-fx-background-color: #0096c9;" text="Update" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="PENCIL" size="18" text="" wrappingWidth="22.5" />
                     </graphic>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </JFXButton>
                  <JFXButton fx:id="btnRefresh" alignment="CENTER" layoutX="649.0" layoutY="20.0" onAction="#refreshTable" prefWidth="120.0" style="-fx-background-color: #00C853;" text="Refresh" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="SEARCH" size="16" text="" wrappingWidth="22.5" />
                     </graphic>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </JFXButton>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
